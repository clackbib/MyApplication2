<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messageEntryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/message_button"
        android:layout_toStartOf="@+id/message_button"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        tools:text="Test" />

    <TextView
        android:id="@+id/messageEntryDescriptor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/messageEntryTitle"
        android:layout_toLeftOf="@+id/message_button"
        android:layout_toStartOf="@+id/message_button"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/gray"
        android:textSize="15sp"
        tools:text="Test" />

    <ImageButton
        android:id="@+id/message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@null"
        android:src="@drawable/message_icon2" />


</RelativeLayout>